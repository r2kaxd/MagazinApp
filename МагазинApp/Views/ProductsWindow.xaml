<Window x:Class="МагазинApp.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продукты" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/poleznye-produkty.jpg"/>
        </Grid.Background>
        <DataGrid x:Name="DataGridProducts" AutoGenerateColumns="True" Margin="10"/>
        <Button x:Name="ButtonAddProduct" Content="Добавить продукт" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="120" Click="ButtonAddProduct_Click"/>
    </Grid>
</Window>