        Title="Добавить сотрудника" Height="300" Width="300">
    <Grid Margin="0,0,-43,-71">
        <Grid.Background>
            <ImageBrush ImageSource="/img/360_F_485197985_WvYk76tNcmHcjW1Nvhbfk6pDWreeVFi2.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label Content="ФИО:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxFullName" HorizontalAlignment="Left" Height="35" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Должность:" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxPosition" HorizontalAlignment="Left" Height="34" Margin="10,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
