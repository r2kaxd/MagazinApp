        <TextBox x:Name="TextBoxPhone" HorizontalAlignment="Left" Height="35" Margin="10,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxEmail" HorizontalAlignment="Left" Height="35" Margin="10,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ButtonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="172,222,0,0" VerticalAlignment="Top" Width="138" Click="ButtonAdd_Click" Height="34" RenderTransformOrigin="0.433,0.59"/>
    </Grid>
</Window>